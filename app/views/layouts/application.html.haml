%html
  %head
    = stylesheet_link_tag 'superfish/superfish', 'jquery-ui-1.7.1'
    = stylesheet_link_tag 'resets', 'typography', 'application', 'forms', 'facebox'

    
    = javascript_include_tag 'jquery-1.3.2', 'jquery-ui-1.7', 'jquery.livequery', 'lowpro.jquery', 'jquery.form', 'facebox'
    = javascript_include_tag 'superfish/hoverIntent', 'superfish/superfish'
    = javascript_include_tag 'swfobject'

    = javascript_include_tag 'application'
    / = javascript_include_tag :defaults
    
    = yield :head

    %title 
      DKPr - DKP Simplified
      = "- #{controller_name}##{action_name}" if RAILS_ENV == "development"
    
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?

  %body
    .clearfix.container{ :class => "#{controller_name} #{action_name}"}
      #header.clearfix
        %ul.sf-menu.clearfix
          %li= link_to "Home", root_path
          %li
            = link_to "Characters", characters_path
            %ul
              %li= link_to "New Character", new_character_path
          %li
            = link_to "Raids", raids_path
            %ul
              %li= link_to "New Raid", new_raid_path
          - if logged_in?
            %li= link_to "Logout", logout_path
          - else
            %li= link_to "Log In", login_path
            %li= link_to "Sign Up", signup_path
    
      .main.content.last
        = yield